{
  "name": "p2p-terminal-chat",
  "version": "1.0.0",
  "type": "module",
  "description": "P2P terminal chat using Holepunch and Ink",
  "main": "src/index.js",
  "scripts": {
    "build": "esbuild src/index.js --bundle --platform=node --format=esm --outfile=dist/index.js --loader:.js=jsx --packages=external",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run build && node dist/index.js"
  },
  "dependencies": {
    "b4a": "^1.6.4",
    "fullscreen-ink": "^0.1.0",
    "hyperswarm": "^4.7.0",
    "ink": "^4.4.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  }
}
